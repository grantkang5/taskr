{
  "name": "server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.6",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.0.18",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/node": "^12.7.5",
    "@types/pg-connection-string": "^2.0.0",
    "apollo-server-testing": "^2.9.6",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typeorm-fixtures-cli": "^1.3.7",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "google-auth-library": "^5.4.1",
    "googleapis": "^43.0.0",
    "graphql": "^14.5.7",
    "graphql-redis-subscriptions": "^2.1.1",
    "ioredis": "^4.14.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.1",
    "pg-connection-string": "^2.1.0",
    "reflect-metadata": "^0.1.10",
    "ts-node": "8.4.1",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.19"
  },
  "scripts": {
    "dev": "concurrently \"yarn db:start\" \"nodemon --exec ts-node src/index.ts\"",
    "start": "node dist/index.js",
    "build": "tsc --sourceMap false",
    "test": "jest",
    "db:start": "docker-compose up --build",
    "db:create": "createdb taskr-api",
    "db:seed": "fixtures ./src/database/fixtures --config ./ormconfig.js --sync --require=ts-node/register"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "testPathIgnorePatterns": [
      "/node_modules",
      "/src/__tests__/mocks/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
